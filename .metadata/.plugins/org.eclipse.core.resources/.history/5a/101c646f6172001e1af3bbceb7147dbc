package com.mg.estruturadados.pilha.desafios;

import java.util.Scanner;

import com.mg.estruturadados.pilha.Pilha;

public class Desafio003 {

	public static void main(String[] args) {
		
		Scanner scan= new Scanner(System.in);
		System.out.println("Digite um texto sem acentos, diacríticos (til, cedilha), sinais de pontuação, travessão ou underline");
		String texto = scan.nextLine();
		
		System.out.println("A sequência de caracteres \""+texto+"\" é palíndromo: "+verificarSeEhPalindromo(texto));
		
		scan.close();
	}
	

	
	public static boolean verificarSeEhPalindromo(String texto) {
		
		Pilha<Character> pilha= new Pilha<>();
		Pilha<Character> pilha2 = new Pilha<>();
		boolean palindromo= true;
		
		String textoSemEspacos= texto.replaceAll(" ","");
		
		for(int i=0; i<textoSemEspacos.length(); i++) {
			
			pilha.empilhar(textoSemEspacos.charAt(i));
			
		}
		
		
		for(int i = pilha.getQuantidadeElementosVetor(); i> (pilha.getQuantidadeElementosVetor()/2); --i) {
			pilha2.empilhar(pilha.buscar(i-1));
		}
		
		for(int i= 0; i< pilha2.getQuantidadeElementosVetor(); i++ ) {
			
			if(!(pilha.buscar(i).toString()).equalsIgnoreCase(pilha2.buscar(i).toString())) {
				palindromo= false;
				break;
			}
			
		}
		
		return palindromo;
		
	}

}
