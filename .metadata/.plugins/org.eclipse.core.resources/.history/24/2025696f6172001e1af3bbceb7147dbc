package com.mg.estruturadados.pilha;

import com.mg.estruturadados.base.EstruturaEstatica;

public class Pilha<T> extends EstruturaEstatica<T>{
	
	public Pilha() {
		super();
	}
	
	public Pilha(int capacidade) {
		super(capacidade);
	}
	
	public void empilhar(T elemento) {
		super.adicionar(elemento);
	}
	
	public T topo() {
		
		if(this.estaVazia()) {
			return null;
		}
		
		return this.elementos[this.quantidadeElementosVetor-1];
		
	}
	
	public T desempilhar() {
		
		if(this.estaVazia()) {
			return null;
		}
		
		T elemento = this.elementos[this.quantidadeElementosVetor - 1];
		this.elementos[this.quantidadeElementosVetor - 1] = null;
		this.quantidadeElementosVetor--;
		
		return elemento;
	}
	

}
