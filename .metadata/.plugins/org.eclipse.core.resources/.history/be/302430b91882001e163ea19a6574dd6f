package com.mgsystems.pilha;

import com.mgsystems.listaligada.IteratorListaLigada;

public class TestePilhaInteiros {
	
	public static void main(String[] args) {
		
		Fila<Integer> pilha = new Fila<Integer>();
		
		pilha.adicionar(1);
		pilha.adicionar(2);
		pilha.adicionar(3);
		pilha.adicionar(4);
		pilha.adicionar(5);
		pilha.adicionar(6);
		
		if(pilha.getTamanho()>0) {
			System.out.println("Último da fila: "+pilha.getUltimoElemento().getValor());
			System.out.println("Primeiro da fila: "+pilha.getPrimeiroElemento().getValor());
			System.out.println("Tamanho da fila: "+pilha.getTamanho());
			System.out.println("Fila está vazia? "+pilha.filaVazia());
			
			IteratorListaLigada<Integer> iterator = pilha.getIteraor();
			
			System.out.println(pilha.imprimirFila(iterator));
		}
		else {
			System.out.println("Não há itens a serem exibidos");
		}
		
		System.out.println();
		
		pilha.remover();
		pilha.remover();
		pilha.adicionar(7);
		
		if(pilha.getTamanho()>0) {
			System.out.println("Último da fila: "+pilha.getUltimoElemento().getValor());
			System.out.println("Primeiro da fila: "+pilha.getPrimeiroElemento().getValor());
			System.out.println("Tamanho da fila: "+pilha.getTamanho());
			System.out.println("Fila está vazia? "+pilha.filaVazia());
			
			IteratorListaLigada<Integer> iterator = pilha.getIteraor();
			
			System.out.println(pilha.imprimirFila(iterator));
		}
		else {
			System.out.println("Não há itens a serem exibidos");
		}
		
	}

}
