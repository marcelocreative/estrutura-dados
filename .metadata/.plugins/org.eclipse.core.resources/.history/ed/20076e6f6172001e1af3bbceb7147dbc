package com.mg.estruturadados.listaligada.testes;

import com.mg.estruturadados.listaligada.ListaLigada;
import com.mg.estruturadados.listaligada.ListaLigadaGenerica;

public class Teste003 {

	public static void main(String[] args) {
		
		ListaLigadaGenerica<Integer> lista= new ListaLigadaGenerica<>();
		lista.adicionar(1);
		lista.adicionar(2);
		lista.adicionar(3);
		lista.adicionar(4);
		
		for(int i= 0; i< lista.getTamanho(); i++) {
			System.out.println("Número: "+lista.get(i).getValor());
		}
		
		System.out.println();
		System.out.println("Removendo o número 1");
		lista.remover(1);
		System.out.println();
		
		for(int i= 0; i< lista.getTamanho(); i++) {
			System.out.println("Número: "+lista.get(i).getValor());
		}
		
		System.out.println();
		System.out.println("Adicionando número 5");
		lista.adicionar(5);
		System.out.println();
		
		for(int i= 0; i< lista.getTamanho(); i++) {
			System.out.println("Número: "+lista.get(i).getValor());
		}

	}

}
