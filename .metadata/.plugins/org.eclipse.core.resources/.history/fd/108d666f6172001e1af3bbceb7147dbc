package com.mg.estruturadados.pilha.desafios;

import java.util.Scanner;

import com.mg.estruturadados.pilha.Pilha;

public class Desafio004 {

	public static void main(String[] args) {
		
		Scanner scan= new Scanner(System.in);
		System.out.println("Digite o número que deseja converter para decimal: ");
		int valor = scan.nextInt();
		
		System.out.println("O resultado da conversão é: "+conversorDecimalBinario(valor));
		
		

	}
	
	public static String conversorDecimalBinario(int valor) {
		
		Pilha<Integer> pilha= new Pilha<>();
		StringBuilder numBinario= new StringBuilder();
		
		while(valor > 0) {
			
			pilha.empilhar(valor % 2);
			valor /= 2;
		}
		
		while(!pilha.estaVazia()) {
			
			numBinario.append(pilha.desempilhar());
		}
		
		return numBinario.toString();
	}

}
