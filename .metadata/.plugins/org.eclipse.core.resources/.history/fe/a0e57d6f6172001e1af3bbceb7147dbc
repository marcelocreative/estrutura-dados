package com.mg.estruturadados.fila;

import com.mg.estruturadados.base.EstruturaEstatica;

public class Fila<T> extends EstruturaEstatica<T> {
	
	public Fila() {
		super();
	}
	
	public Fila(int capacidade) {
		super(capacidade);
	}
	
	public void enfileirar(T elemento) {
		
		this.adicionar(elemento);
		
	}
	
	public T espiar() {
		
		if(this.estaVazia()) {
			return null;
		}
		
		return this.elementos[0];
		
	}
	
	public T desenfileirar() {
		
		final int POS = 0;
		T elementoDesenfileirado;
		
		if(this.estaVazia()) {
			return null;
		}
		
		elementoDesenfileirado= this.elementos[POS];
		
		this.remover(POS);
		
		return elementoDesenfileirado;
	}
	

}
