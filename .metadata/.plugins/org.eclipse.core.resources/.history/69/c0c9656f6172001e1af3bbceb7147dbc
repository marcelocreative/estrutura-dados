package com.mg.estruturadados.pilha.desafios;

import java.util.Scanner;

import com.mg.estruturadados.pilha.Pilha;

public class Desafio002 {

	public static void main(String[] args) {
		
		Scanner scan= new Scanner(System.in);
		Pilha<Integer> par= new Pilha<Integer>();
		Pilha<Integer> impar= new Pilha<Integer>();
		
		for(int i=0; i<10; i++) {
			System.out.println("Digite o "+(i+1)+"º número");
			Integer numero= scan.nextInt();
			
			if(numero % 2 == 0 && numero != 0) {
				
				System.out.println("Número par empilhado na pilhar par: "+numero);
				par.empilhar(numero);
				
			}
			
			else if(numero != 0 && numero % 2 != 0) {
				System.out.println("Número impar empilhado na pilhar impar: "+numero);
				impar.empilhar(numero);
			}
			
			else {
				
				if(par.estaVazia()) {
					System.out.println("Pilha par está fazia");
				}
				else {
					System.out.println("Desempilhando o elemento "+par.desempilhar()+" da pilha par");
				}
				
				if(impar.estaVazia()) {
					System.out.println("Pilha impar está fazia");
				}
				else {
					System.out.println("Desempilhando o elemento "+impar.desempilhar()+" da pilha impar");
				}
				
				System.out.println();
			}
		}

		scan.close();
		
		System.out.println("\nDesempilhando todos os elementos da pilha par");
		while(!par.estaVazia()) {
			System.out.println("Desempilhando o elemento "+par.desempilhar()+" da pilha par");
		}
		
		System.out.println();
		System.out.println("\nDesempilhando todos os elementos da pilha impar");
		while(!impar.estaVazia()) {
			System.out.println("Desempilhando o elemento "+impar.desempilhar()+" da pilha impar");
		}
		
	}

}
